<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_tweet_count"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/text_disablable"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_width="32dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginStart="8dp"
        android:id="@+id/layout_buttons"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_select_image"
            android:id="@+id/button_image"
            android:textAllCaps="false"
            android:textColor="@color/image_button"
            android:layout_width="48dp"
            android:layout_height="wrap_content" />

        <Button
            android:visibility="gone"
            android:layout_toEndOf="@id/button_image"
            android:id="@+id/button_location"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <Button
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_send"
            android:id="@+id/button_tweet"
            android:text="@string/tweet_button"
            android:textColor="@color/image_button"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <EditText
        android:background="@drawable/shape_new_tweet"
        android:id="@+id/text_tweet"
        android:gravity="top"
        android:padding="8dp"
        android:scrollHorizontally="false"
        android:layout_toStartOf="@id/text_tweet_count"
        android:layout_above="@id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine" />

    <!-- placeholder for reply tweet -->
    <FrameLayout
        android:visibility="gone"
        android:layout_alignEnd="@id/text_tweet"
        android:layout_alignBottom="@id/text_tweet"
        android:background="@android:color/holo_red_dark"
        android:id="@+id/reply_tweet_view"
        android:layout_width="120dp"
        android:layout_height="120dp" />


</RelativeLayout>
