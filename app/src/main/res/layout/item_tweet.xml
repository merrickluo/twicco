<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:id="@+id/image_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/avatar_description" />

    <RelativeLayout
        android:id="@+id/layout_id"
        android:layout_toEndOf="@id/image_avatar"
        android:layout_alignTop="@id/image_avatar"
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="A.I."
            android:id="@+id/text_name"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@android:color/darker_gray"
            android:text="\@merrick_luo"
            android:id="@+id/text_id"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="1h"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:text="This is a long tweet xsldkfjaslkdfjlaskdfjlaskjf;askdfja;lskdfjla;skfjlaskdfjalsdjflaskdfjlaskdfj"
        android:id="@+id/text_tweet"
        android:textColor="@android:color/white"
        android:layout_toEndOf="@id/image_avatar"
        android:layout_alignStart="@id/layout_id"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@id/layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/layout_quote"
        android:visibility="gone"
        android:background="@drawable/shape_quote_tweet"
        android:layout_alignStart="@id/text_tweet"
        android:layout_below="@id/text_tweet"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="via twicco"
        android:textColor="@android:color/darker_gray"
        android:layout_alignStart="@id/layout_id"
        android:layout_below="@id/layout_quote"
        android:layout_marginEnd="12dp"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:id="@+id/text_via"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="retweeted by A.I. and 233 others"
        android:id="@+id/text_retweet"
        android:layout_below="@id/text_via"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_actions"
        android:layout_below="@id/text_retweet"
        android:layout_marginTop="8dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/action_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/action_reply"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/action_retweet"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_retweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/action_heart"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/action_quote"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/action_more"
        android:layout_alignTop="@id/layout_actions"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/sp_line"
        android:layout_below="@id/layout_actions"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="0.5dp" />

    <View
        android:id="@+id/view_color_label"
        android:background="@color/colorLabelDefault"
        android:layout_width="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/sp_line"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>
















